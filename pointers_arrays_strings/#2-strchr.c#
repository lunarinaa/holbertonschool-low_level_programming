#include "main.h"
#include <stddef.h>
/**
 * _strchr - a function that locates a character in a string.
 * @s: pointer to a string
 * @c: character to look for
 * Return: the string or Null
 */
char *_strchr(char *s, char c)
{
int i;
 for (i = 0;(s[i] >= '\0')
	{
	if (s[i] == c)
	{
	return (s + i);
	}
i++;
}
return ('\0');
}
